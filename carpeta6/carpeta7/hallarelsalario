class empleado:
    def __init__(self, nombre, cargo, salario):
        self.__nombre = nombre
        self.__cargo = cargo
        self.__salario = salario
        self.__hora = sum
    def gettotal(self):
        return {self.__nombre},{self.__cargo},{self.__salario}
    def gethora(self):
        self.__hora
        return self.__hora
    def sethora(self):
        self.__hora / self.__salario
        a=int(input('escriba hora'))
        for i in range (self.__salario):
            if self.__salario == i:
               self.__salario * self.__hora/100 +a 
    def getsalario(self):
        self.__salario
        return self.__salario
    def setsalario(self):
        self.__salario / 12,82
z=empleado()
print(z.gettotal())
